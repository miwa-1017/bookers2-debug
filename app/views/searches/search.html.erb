<h2>Books search for "<%= params[:word] %>"</h2>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% if @range == "User" %>
      <% @users.each do |user| %>
        <tr>
          <td><% if user.get_profile_image.present? %>
                <%= image_tag user.get_profile_image, size:"50x50", class: "rounded-circle" %>
              <% end %>
              <%= link_to user.name, user_path(user.id) %>
          </td>
          <td>-</td>
          <td><%= user.introduction %></td>
        </tr>
      <% end %>
    <% else %>
      <% @books.each do |book| %>
        <tr>
          <td><% if book.user.get_profile_image.present? %>
                <%= image_tag book.user.get_profile_image, size:"50x50", class: "rounded-circle" %>
              <% end %>
              <%= link_to book.user.name, user_path(book.user) %>
          </td>
          <td><%= link_to book.title, book_path(book) %></td>
           <td><%= book.body %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
