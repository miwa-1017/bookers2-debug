<table class='table'>
  <tr>
    <td><%= image_tag user.get_profile_image, size:'100x100' %></td>
  </tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  <tr>
    <th>follows</th>
    <td><%= link_to "#{user.followings.count}人", user_followings_path(user.id) %></td>
  </tr>
  <tr>
    <th>followers</th>
    <td><%= link_to "#{user.followers.count}人", user_followers_path(user.id) %></td>
  </tr>
</table>

<% if current_user != user %>
    <% if current_user.following?(user) %>
      <%= button_to 'フォロー外す', user_relationships_path(user_id: user.id), method: :delete, class: "btn btn-outline-danger mt-2" %>
    <% else %>
      <%= button_to 'フォローする', user_relationships_path(user_id: user.id), method: :post, class: "btn btn-success mt-2" %>
    <% end %>
<% end %>

<% if current_user != @user %>
  <% if (current_user.followings.include?(@user)) && (@user.followings.include?(current_user)) %>
    <%= link_to "チャットを始める", rooms_path(user_id: @user.id), method: :post, class: "btn btn-success" %>
  <% end %>
<% end %>

<div class='row'>
<% if user == current_user %>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
<% end %>
</div>