<h2>Books search for "<%= params[:tag] %>"</h2>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
            <%= image_tag book.user.get_profile_image, size:'50x50' %><br>
            <span style="font-size:12px;white-space:nowrap;"><%= book.user.name %></span>
            <% end %>
          </td>
        <td><%= link_to book.title,book_path(book) %></td>
        <td><%= book.body %></td>
        <td><% book.tag_list.each do |tag| %><%= link_to tag,search_tag_path(tag: tag), class:"text-decoration-none me-2" %>
            <% end %>
        </td>
        <td><%= render 'books/favorite', book: book %>いいね
            <span style="margin-left: 6px;">
        コメント数: <%= book.book_comments.count %></span>
        </td>
        <td>
          <div id="show-star-rate-<%= book.id %>" data-score="<%= book.rate %>"></div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>