<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <td><% book.tag_list.each do |tag| %><%= link_to tag,search_tag_path(tag: tag), class:"text-decoration-none me-2" %>
            <% end %></td>
          <td style="white-space: nowrap; vertical-align: middle;">
            <div id="favorite-button-<%= book.id %>" style="display: inline-block;">
            <%= render 'books/favorite', book: book %>
            </div>
            <span style="margin-left: 6px;">
        コメント数: <%= book.book_comments.count %></span>
           <div id="show-star-rate-<%= book.id %>" data-score="<%= book.rate %>" style="display: inline-block;margin-left: 6px;"></div>
           閲覧数: <%= book.view_counts.count %>
          </td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>